// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/ubuntu
{
	"name": "Ubuntu",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"image": "mcr.microsoft.com/devcontainers/base:jammy",
	"features": {
		"ghcr.io/prulloac/devcontainer-features/latex:1": {
			"scheme": "basic",
			"mirror": "https://mirror.ctan.org/systems/texlive/tlnet/"
		}
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"James-Yu.latex-workshop",
				"GitHub.copilot",
				"GitHub.copilot-chat",
				"stkb.rewrap"
			],
			"settings": {
				"editor.wordWrap": "on",
				"files.autoSave": "onFocusChange",
				"files.autoSaveDelay": 150000,
				"latex-workshop.latex.recipes": [
					{
					   "name": "PdfPythonTex",
					   "tools": [
							"pdflatex",
							"pythontex",
							"pdflatex"
					   ]
				   },        
					{
						"name": "pdflatex",
						"tools": [
							"pdflatex"
						]
					},
					{
						"name": "latexmk ðŸ”ƒ",
						"tools": [
							"latexmk"
						]
					},
					{
						"name": "latex -> dvips -> ps2pdf",
						"tools": [
							"latex",
							"dvips",
							"ps2pdf"
						]
					}
				],
				"latex-workshop.latex.tools": [
					{
						"name": "latexmk",
						"command": "latexmk",
						"args": [
							"-synctex=1",
							"-interaction=nonstopmode",
							"-file-line-error",
							"-pdf",
							"-outdir=%OUTDIR%",
							"%DOC%"
						],
						"env": {}
					},
					{
						"name": "latex",
						"command": "latex",
						"args": [
							"-synctex=1",
							"-interaction=nonstopmode",
							"-file-line-error",
							"-outdir=%OUTDIR%",
							"--shell-escape",
							"%DOC%"
						],
						"env": {}
					},
					{
						"name": "xelatexmk",
						"command": "latexmk",
						"args": [
							"-synctex=1",
							"-interaction=nonstopmode",
							"-file-line-error",
							"-xelatex",
							"--shell-escape",
							"-outdir=%OUTDIR%",
							"%DOC%"
						],
						"env": {}
					},
					{
						"name": "pdflatex",
						"command": "pdflatex",
						"args": [
							"-synctex=1",
							"-interaction=nonstopmode",
							"-file-line-error",
							"-enable-write18",
							"--shell-escape",
							"%DOC%"
						],
						"env": {}
					},
					{
						"name": "pythontex",
						"command": "python3",
						"args": [
							"%WORKSPACE_FOLDER%/scripts/pythontex/pythontex3.py",
							"%DOC%"
						],
						"env": {}
					},
					{
						"name": "dvips",
						"command": "dvips",
						"args": [
							"%DOCFILE%"
						],
						"env": {}
					},
					{
						"name": "ps2pdf",
						"command": "ps2pdf",
						"args": [
							"%DOCFILE%"
						],
						"env": {}
					}
				]
			}
		}
	},
	// Features to add to the dev container. More info: https://containers.dev/features.
	// "features": {},

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],

	// Use 'postCreateCommand' to run commands after the container is created.
	"postCreateCommand": "bash -i ./scripts/initialize-dependencies.sh"

	

	// Configure tool-specific properties.
	// "customizations": {},

	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
}
